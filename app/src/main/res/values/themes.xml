<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialMedia" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>

    <style name="EditTextWhiteHint" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>

    <style name="Theme.SocialMedia.NavigationBarColor">
        <item name="android:navigationBarColor">@color/red</item>
    </style>

    <style name="Theme.SocialMedia.NavigationBarTransparent">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/transparente</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@drawable/portada</item>
    </style>

    <style name="Theme.SocialMedia.Splash">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparente</item>
        <item name="android:navigationBarColor">@color/transparente</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@drawable/fondo_hd_4k</item>
    </style>
    <style name="ToolbarName" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="NavigationBarColorChanges" parent="Theme.SocialMedia">
        <item name="android:navigationBarColor">@color/red_dark</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="ButtonSignInGoogle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>